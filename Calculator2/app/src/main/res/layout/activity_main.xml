<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tulajdonos.calculator.MainActivity">

    <Button
        android:id="@+id/mult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:text="MULTIPLY" />

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mult"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:text="DIVIDE" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mult"
        android:layout_alignLeft="@+id/mult"
        android:layout_alignStart="@+id/mult"
        android:layout_marginBottom="86dp"
        android:text="ADD" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/div"
        android:layout_alignRight="@+id/div"
        android:layout_alignTop="@+id/add"
        android:text="SUBTRACT" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sub"
        android:hint="number1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sub"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignRight="@+id/et1"
        android:hint="number2"
        android:layout_below="@+id/et1"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et2"
        android:hint="result"
        android:layout_alignRight="@+id/et2"
        android:layout_below="@+id/et2"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout >
